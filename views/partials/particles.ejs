<canvas class="background"></canvas>
<script>
  window.onload = function() {
    Particles.init({
      selector: '.background',
      connectParticles: true,
      sizeVariations: 5,
      color: "#e1eff7",
      speed: 0.75,
      maxParticles: 50,
      responsive: [{
        breakpoint: 800,
        options: [{
          maxParticles: 50
        }]
      }]
    });
  };
</script>
